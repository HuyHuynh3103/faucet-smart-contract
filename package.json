{
  "name": "faucet-smart-contract",
  "version": "1.0.0",
  "description": "This is smart contract for deploy tokennomic ERC-20 standard  for fauceting",
  "main": "index.js",
  "scripts": {
    "test": "hardhat test --network hardhat",
    "compile": "prettier --write ./contracts -l && hardhat compile && solhint -f table ./contracts/**/*.sol -f table ./contracts/*.sol",
    "clean": "hardhat clean",
	"deploy": "hardhat run scripts/deploy.ts --network",
    "deploy:bscTest": "hardhat run --network bscTest scripts/deploy.ts",
    "deploy:bsc": "hardhat run --network bsc scripts/deploy.ts",
    "deploy:ethereum": "hardhat run --network ethereum scripts/deploy.ts",
    "deploy:goerli": "hardhat run --network goerli scripts/deploy.ts",
	"upgrade":"hardhat run scripts/upgrade.ts --network",
    "upgrade:bsc": "hardhat run --network bsc scripts/upgrade.ts",
    "upgrade:bscTest": "hardhat run --network bscTest scripts/upgrade.ts",
    "upgrade:goerli": "hardhat run --network goerli scripts/upgrade.ts",
    "upgrade:ethereum": "hardhat run --network ethereum scripts/upgrade.ts",
	"verify:argument": "hardhat verify --constructor-args arguments.json --network",
    "verify:bscTest": "hardhat verify --network bscTest",
    "verify:bsc": "hardhat verify --network bsc",
    "verify:goerli": "hardhat verify --network goerli",
    "verify:mainnet": "hardhat verify --network mainnet",
    "coverage": "npx hardhat coverage --testfiles  'test/emptyrun.coverage.ts' && npx hardhat coverage --testfiles  'test/*.spec.ts'",
    "size": "hardhat size-contracts",
    "prettier": "prettier --write \"**/*.{js,json,md,sol,ts,yml}\"",
    "prettier:check": "npx prettier -c \"**/*.{js,json,md,sol,ts,yml}\"",
    "sol:prettier": "prettier --write ./contracts -l",
    "sol:lint": "prettier --list-different ./contracts/**/*.sol",
	"interact": "ts-node scripts/interaction.ts",
	"metadata": "ts-node scripts/metadata-generate.ts"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@nomicfoundation/hardhat-network-helpers": "^1.0.8",
    "@nomicfoundation/hardhat-toolbox": "^2.0.1",
    "@nomiclabs/hardhat-ethers": "^2.2.2",
    "@openzeppelin/contracts": "^4.8.1",
    "@openzeppelin/contracts-upgradeable": "^4.8.1",
    "@openzeppelin/hardhat-upgrades": "^1.22.1",
    "@typechain/ethers-v5": "^10.2.0",
    "@typechain/hardhat": "^6.1.5",
    "@types/chai": "^4.3.4",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.14.0",
    "chai": "^4.3.7",
    "dotenv": "^16.0.3",
    "ethers": "^5.7.2",
    "fs": "^0.0.1-security",
    "hardhat": "^2.12.7",
    "hardhat-contract-sizer": "^2.8.0",
    "hardhat-gas-reporter": "^1.0.9",
    "prettier": "^2.8.4",
    "prettier-plugin-solidity": "^1.1.2",
    "solhint": "^3.4.0",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.8.2",
    "ts-node": "^10.9.1",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.3.0",
    "typechain": "^8.1.1",
    "typescript": "^4.9.5"
  }
}
